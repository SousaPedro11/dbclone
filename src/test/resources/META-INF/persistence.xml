				name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property
				name="javax.persistence.jdbc.password"
				value="iec_desenv" />
			<property
				name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://localhost:5432/dev_siec_2_5" />
			<!-- <property name="javax.persistence.jdbc.user" value="lisboaMemoria" 
				/> <property name="javax.persistence.jdbc.password" value="senhaNova" /> 
				<property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:bancoDadosTeste" 
				/> -->
			<!-- <property name="javax.persistence.validation.mode" value="AUTO" /> -->

			<!-- HIBERNATE -->
			<property
				name="hibernate.show_sql"
				value="false" />
			<property
				name="hibernate.format_sql"
				value="true" />
			<property
				name="hibernate.use_sql_comments"
				value="true" />
			<property
				name="hibernate.generate_statistics"
				value="false" />
			<property
				name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="javax.persistence.jdbc.user" value="iec_desenv"/>
